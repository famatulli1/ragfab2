# ============================================
# Analytics Worker Configuration
# ============================================

# -------------------------------------------
# Database Configuration
# -------------------------------------------
DATABASE_URL=postgresql://raguser:ragpass@ragfab-postgres.internal:5432/ragdb

# -------------------------------------------
# Chocolatine LLM Configuration
# -------------------------------------------
# URL de l'API Chocolatine pour analyse qualité
CHOCOLATINE_API_URL=https://apigpt.mynumih.fr

# Clé API (laisser vide si pas nécessaire)
CHOCOLATINE_API_KEY=

# Modèle à utiliser pour validation IA
CHOCOLATINE_MODEL=jpacifico/Chocolatine-2-14B-Instruct-v2.0.3

# Timeout requêtes LLM (secondes)
CHOCOLATINE_TIMEOUT=120.0

# -------------------------------------------
# Worker Configuration
# -------------------------------------------
# Heure d'exécution automatique (format HH:MM, 24h)
QUALITY_ANALYSIS_SCHEDULE=03:00

# Intervalle de vérification du cron (secondes)
WORKER_CHECK_INTERVAL=60

# -------------------------------------------
# Quality Thresholds
# -------------------------------------------
# Seuil de satisfaction minimum (0.0-1.0)
QUALITY_SATISFACTION_THRESHOLD=0.3

# Nombre minimum d'apparitions avant filtrage
QUALITY_MIN_APPEARANCES=3

# -------------------------------------------
# Logs
# -------------------------------------------
LOG_LEVEL=INFO
